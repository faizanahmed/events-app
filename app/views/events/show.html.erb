
<div class="page-header " id="margin-top">
  
  <h1>APPROACHING EVENTS </h1><p class="text-info" style="font-size:40px"><strong><%=@event.name %></strong></p>
</div>
<div class="row">



		<div class="col-md-6 col-md-offset-1">
			<ul class="list-group">
  			<li class="list-group-item">EVENT NAME: <%=@event.name %></li>
  			<li class="list-group-item">DESCIPTION: <%= @event.description %></li>
  			<li class="list-group-item">LOCATION: <%= @event.loc %></li>
  			<li class="list-group-item">ABOUT <%=@user.name %>: <%=@user.bio%></li>
  			<li class="list-group-item image-thumbnail"><%=image_tag @event.avatar.thumb.url, size: "600x400"  %></li>
  			  
 			  
			</ul>
			<input type="hidden" value="<%= @event.loc%>" id="address" >
			<%= link_to "Delete This Event",user_event_path(@user,@event), method: :delete, class: "btn btn-primary" %>

			
			<%= link_to "ADD A COMMENT", new_event_comment_path(@event),class: "btn btn-primary" %>
			<br>
			<%= render 'layouts/new_comment' %>
			<%= render 'layouts/show_comments' %>
					
		</div>
		
	
	

<div class="col-md-4 ">
<p class="text-success" style="font-size:40px"><strong> SEE THE MAP </strong>
</p>
<p class="text-primary" style="font-size:20px"><strong> 
 <%=@event.loc %></strong> </p>
<div id='map-canvas' style="width:500px;height:450px">
</div>
</div>
