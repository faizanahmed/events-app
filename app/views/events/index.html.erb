<div class="row col-md-offset-1 " id="margin-top">

		<% @events.each do |event|%>
		
		<div class="col-md-5 ">
			<ul class="list-group">
  			<li class="list-group-item">EVENT NAME: <%=event.name %></li>
  			<li class="list-group-item">DESCRIPTION: <%= event.description %></li>
  			
			<li class="list-group-item img-thumbnail"><%= image_tag event.avatar.index_thumb.url %></li>
 			  
			</ul>
			<%= link_to "EDIT", edit_user_event_path(event.user_id,event),class: "btn btn-primary" %>
			<%= link_to "VIEW", user_event_path(event.user_id,event),class: "btn btn-success" %>
		
		</div>
		<% end %>
	
	</div>



